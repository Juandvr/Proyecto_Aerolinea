@using Proyecto_Aerolinea.Web.DTOs
@model AircraftDTO
@{
    ViewData["Title"] = "Añadir avión";
}

<body>
    <div class="container-fluid" style="background-color: #ecf0f1; min-height: 100vh; padding: 40px;">
        <div class="row justify-content-center">
            <div class="col-lg-8 col-md-10">
                <div class="card" style="border: none; border-radius: 20px; box-shadow: 0 10px 30px rgba(0,0,0,0.1); overflow: hidden;">
                    <div class="card-header" style="background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%); border: none; padding: 30px;">
                        <h3 class="m-0 font-weight-bold" style="color: white; display: flex; align-items: center;">
                            <span style="font-size: 35px; margin-right: 15px;">🛩️</span>
                            Añadir Nuevo Avión
                        </h3>
                        <small style="color: rgba(255,255,255,0.9);">Registra un nuevo avión en la flota</small>
                    </div>
                    <div class="card-body" style="padding: 40px;">
                        <form asp-action="Create" method="POST" class="row g-4">

                            <div class="col-md-12">
                                <div class="form-floating">
                                    <input asp-for="Model" class="form-control" placeholder="@Html.DisplayFor(dto => dto.Model)" style="border: 2px solid #e0e0e0; border-radius: 10px; padding: 20px 15px; font-size: 16px;">
                                    <label asp-for="Model" style="color: #7f8c8d; padding-left: 15px;">
                                        <i class="bi bi-airplane" style="margin-right: 5px;"></i> Modelo
                                    </label>
                                    <span asp-validation-for="Model" class="text-danger" style="font-size: 14px; margin-top: 5px; display: block;"></span>
                                </div>
                            </div>

                            <div class="col-md-12">
                                <div class="form-floating">
                                    <input asp-for="Capacity" class="form-control" placeholder="@Html.DisplayFor(dto => dto.Capacity)" style="border: 2px solid #e0e0e0; border-radius: 10px; padding: 20px 15px; font-size: 16px;">
                                    <label asp-for="Capacity" style="color: #7f8c8d; padding-left: 15px;">
                                        <i class="bi bi-people-fill" style="margin-right: 5px;"></i> Capacidad
                                    </label>
                                </div>
                            </div>

                            <div class="col-md-12">
                                <div class="form-floating">
                                    <input asp-for="RegistrationNumber" class="form-control" placeholder="@Html.DisplayFor(dto => dto.RegistrationNumber)" style="border: 2px solid #e0e0e0; border-radius: 10px; padding: 20px 15px; font-size: 16px;">
                                    <label asp-for="RegistrationNumber" style="color: #7f8c8d; padding-left: 15px;">
                                        <i class="bi bi-hash" style="margin-right: 5px;"></i> Número de Registro
                                    </label>
                                </div>
                            </div>

                            <div class="col-md-12">
                                <div class="form-floating">
                                    <input asp-for="Airline" class="form-control" placeholder="@Html.DisplayFor(dto => dto.Airline)" style="border: 2px solid #e0e0e0; border-radius: 10px; padding: 20px 15px; font-size: 16px;">
                                    <label asp-for="Airline" style="color: #7f8c8d; padding-left: 15px;">
                                        <i class="bi bi-building" style="margin-right: 5px;"></i> Aerolínea
                                    </label>
                                </div>
                            </div>

                            <div class="col-12 text-center mt-4">
                                <button class="btn btn-lg" type="submit" style="background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%); color: white; border: none; border-radius: 12px; padding: 15px 40px; font-weight: bold; margin-right: 10px; box-shadow: 0 5px 15px rgba(79, 172, 254, 0.3); transition: all 0.3s ease;">
                                    <i class="bi bi-save"></i> Guardar Avión
                                </button>
                                <a asp-action="Index" class="btn btn-lg" style="background: #95a5a6; color: white; border: none; border-radius: 12px; padding: 15px 40px; font-weight: bold; box-shadow: 0 5px 15px rgba(149, 165, 166, 0.3); transition: all 0.3s ease;">
                                    <i class="bi bi-arrow-left"></i> Volver
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

<style>
    .form-control:focus {
        border-color: #4facfe !important;
        box-shadow: 0 0 0 0.2rem rgba(79, 172, 254, 0.25) !important;
    }

    .btn:hover {
        transform: translateY(-3px);
        box-shadow: 0 8px 20px rgba(0,0,0,0.3) !important;
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
