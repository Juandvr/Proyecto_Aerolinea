@using Proyecto_Aerolinea.Web.DTOs
@model List<FlightDTO>

@{
    ViewData["Title"] = "Index";
}

<div class="card">

    <div class="card-header">

        <div class="row">
            <h3 class="m-0 font-weight-bold text-primary col-md-11">Vuelos</h3>
            <div class="col-md-1">
                <a asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i></a>
            </div>
        </div>
    </div>

    <div class="card-body mt-3">
        <table class="table table-bordered mt-3">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Código</th>
                    <th>Fecha de salida</th>
                    <th>Fecha de llegada</th>
                    <th>Estado</th>
                    <th>Aeropuerto de origen</th>
                    <th>Aeropuerto de destino</th>
                    <th>Avion</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var flight in Model)
                {
                    <tr>
                        <td>@flight.Id</td>
                        <td>@flight.FlightCode</td>
                        <td>@flight.DepartureDateTime</td>
                        <td>@flight.ArrivalDateTime</td>
                        <td>@flight.Status</td>
                        <td>@flight.OriginAirport.AirportName</td>
                        <td>@flight.DestinationAirport.AirportName</td>
                        <td>@flight.Aircraft.Model</td>
                        <td>
                            <a asp-action="Edit" asp-route-Id="@flight.Id" class="btn btn-sm btn-warning"><i class="bi bi-pencil-fill"></i></a>
                            <form asp-action="Delete" asp-route-Id="@flight.Id" style="display: contents;">
                                <button class="btn btn-sm btn-danger btnDelete"><i class="bi bi-trash-fill"></i></button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>

@section Scripts {
    <script>

        $(document).ready(function() {

            $('.btnDelete').click(function(event) {

                event.preventDefault();

                Swal.fire({
                  icon: "question",
                  title: "¿Desea eliminar la sección?",
                  text: "No podrá revertirlo",
                  showCancelButton: true
                }).then((result) => {

                    if (result.isConfirmed) {

                        const form = $(this).closest('form');

                        form.submit();
                    }
                });
            });
        });

    </script>
}