@model FlightDTO

<div class="page-title dark-background aos-init aos-animate" data-aos="fade" style="background-image: url(assets/img/travel/showcase-8.webp);">
    <div class="container position-relative">
        <h1>Editor</h1>
        <nav class="breadcrumbs">
            <ol>
                <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                <li><a asp-action="Available">Tours</a></li>
                <li class="current">Editor</li>
            </ol>
        </nav>
    </div>
</div>

<div class="card mt-3">

    <div class="card-header">
        <h3 class="m-0 font-weight-bold text-primary">Editor de Vuelos</h3>
    </div>

    <div class="card-body">

        <form asp-action="Edit" method="post" class="row g-3">

            <input type="hidden" asp-for="Id"/>

            <div class="col-md-12">
                <div class="form-floating">
                    <input asp-for="FlightCode" class="form-control" placeholder="@Html.DisplayFor(dto => dto.FlightCode)">
                    <label asp-for="FlightCode"></label>
                    <span asp-validation-for="FlightCode" class="text-danger"></span>
                </div>
            </div>

        </form>

    </div>

</div>