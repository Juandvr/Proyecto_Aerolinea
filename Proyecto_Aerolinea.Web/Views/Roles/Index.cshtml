@model Proyecto_Aerolinea.Web.Core.Pagination.PaginationResponse<Proyecto_Aerolinea.Web.DTOs.ProjectRoleDTO>

@inject Proyecto_Aerolinea.Web.Services.Abstract.IUserService _userService

@{
    ViewData["Title"] = "Roles";
}

<div class="pagetitle">
    <h1>Dashboard</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Dashboard">Dashboard</a></li>
            <li class="breadcrumb-item active">Roles</li>
        </ol>
    </nav>
</div>

<section class="section dashboard">
    <div class="card">

        <div class="card-header py-3">
            <div class="row">
                <h3 class="m-0 font-weight-bold text-primary col-md-11">Roles</h3>

                @if (await _userService.CurrentUserIsAuthorizedAsync("createRoles", "Roles"))
                {
                    <div class="col-md-1 text-end">
                        <a asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i></a>
                    </div>
                }
            </div>
        </div>

        <div class="card-body mt-2">

            <form asp-action="Index" method="GET" class="navbar-search">
                <input type="hidden" name="Page" value="@Model.CurrentPage" />

                <div class="row mt-3 align-items-center">
                    <div class="col-md-auto">
                        <select name="RecordsPerPage" class="form-select bg-light border-0 small">
                            <option value="2" selected="@(Model.RecordsPerPage == 2)">2</option>
                            <option value="10" selected="@(Model.RecordsPerPage == 10)">10</option>
                            <option value="15" selected="@(Model.RecordsPerPage == 15)">15</option>
                            <option value="30" selected="@(Model.RecordsPerPage == 30)">30</option>
                            <option value="50" selected="@(Model.RecordsPerPage == 50)">50</option>
                        </select>
                    </div>

                    <div class="col-md-9">
                        <div class="input-group mb-3">
                            <input type="text"
                                   name="Filter"
                                   class="form-control bg-light border-0 small"
                                   placeholder="Buscar..."
                                   value="@Model.Filter" />
                        </div>
                    </div>

                    <div class="col-md-auto">
                        <button class="btn btn-primary"><i class="bi bi-search"></i></button>
                    </div>
                </div>
            </form>

            <table class="table table-bordered mt-3">
                <thead class="table-light">
                    <tr>
                        <th>Rol</th>
                        <th style="width: 150px;"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.List)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td class="text-end">
                                @if (item.Name != Proyecto_Aerolinea.Web.Core.Env.SUPER_ADMIN_ROLE_NAME)
                                {
                                    @if (await _userService.CurrentUserIsAuthorizedAsync("updateRoles", "Roles"))
                                    {
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">
                                            <i class="bi bi-pencil-fill"></i>
                                        </a>
                                    }

                                    @if (await _userService.CurrentUserIsAuthorizedAsync("deleteRoles", "Roles"))
                                    {
                                        <form asp-action="Delete" asp-route-id="@item.Id" style="display:inline">
                                            @Html.AntiForgeryToken()  <!-- ✅ importante -->
                                            <button class="btn btn-danger btn-sm btnDelete" type="button">
                                                <i class="bi bi-trash-fill"></i>
                                            </button>
                                        </form>

                                    }
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            @await Html.PartialAsync("_PaginationComponent", Model)
        </div>
    </div>
</section>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.btnDelete').click(function (event) {
                event.preventDefault();

                const form = $(this).closest('form'); // ✅ guarda la referencia antes del SweetAlert

                Swal.fire({
                    title: "¿Desea eliminar el rol?",
                    text: "Esta acción no se puede revertir.",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonText: "Sí, eliminar",
                    cancelButtonText: "Cancelar"
                }).then((result) => {
                    if (result.isConfirmed) {
                        form.submit(); // ✅ ahora funciona siempre
                    }
                });
            });
        });
    </script>
}
