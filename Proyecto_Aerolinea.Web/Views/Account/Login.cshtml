@model LoginDTO

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>
    @await Html.PartialAsync("_Styles")
    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Inter', sans-serif;
        }

        .login-card {
            max-width: 420px;
            margin: 80px auto;
            border-radius: 12px;
            box-shadow: 0 4px 30px rgba(0, 0, 0, 0.08);
        }

        .btn-dark {
            background-color: #1c1b1b;
            border: none;
        }

            .btn-dark:hover {
                background-color: #000;
            }

        .form-control {
            border-radius: 8px;
            height: 48px;
        }

        .google-btn {
            border: 1px solid #ddd;
            background-color: white;
            color: #333;
        }

            .google-btn:hover {
                background-color: #f8f9fa;
            }

        .divider {
            text-align: center;
            position: relative;
        }

            .divider::before,
            .divider::after {
                content: '';
                position: absolute;
                top: 50%;
                width: 40%;
                height: 1px;
                background-color: #ddd;
            }

            .divider::before {
                left: 0;
            }

            .divider::after {
                right: 0;
            }
    </style>
</head>
<body>
    <nav class="navbar bg-light border-bottom">
        <div class="container">
            <a class="navbar-brand fw-bold" href="#">Login</a>
            <ul class="nav">
                <li class="nav-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
            </ul>
        </div>
    </nav>

    <div class="card login-card p-4">
        <div class="card-body text-center">
            <h4 class="fw-bold">Bienvenido de vuelta</h4>
            <p class="text-muted">Ingresa a tu cuenta</p>

            <form asp-action="Login" method="POST">
                <div class="mb-3 text-start">
                    <div class="input-group">
                        <span class="input-group-text bg-white border-end-0">
                            <i class="bi bi-envelope"></i>
                        </span>
                        <input asp-for="Email" type="email" class="form-control border-start-0" placeholder="Correo" />
                    </div>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-3 text-start">
                    <div class="input-group">
                        <span class="input-group-text bg-white border-end-0">
                            <i class="bi bi-lock"></i>
                        </span>
                        <input asp-for="Password" type="password" class="form-control border-start-0" placeholder="Contraseña" />
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between align-items-center mb-3">
                    <div>
                        <input class="form-check-input me-1" type="checkbox" id="remember" />
                        <label class="small text-muted" for="remember">Recordarme</label>
                    </div>
                    <a href="#" class="small text-decoration-none fw-semibold">Olvidaste tu contraseña?</a>
                </div>

                <button type="submit" class="btn btn-dark w-100 rounded-pill py-2">
                    Ingresar →
                </button>
            </form>

            <p class="mt-4 small text-muted">
                No tienes una cuenta?
                <a asp-action="Signup" class="fw-semibold text-decoration-none">Crear cuenta</a>
            </p>
        </div>
    </div>

    @await Html.PartialAsync("_Scripts")

    @section Scripts {

        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }

</body>
</html>
